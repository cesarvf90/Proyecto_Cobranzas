<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
 <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/Images/favicon.ico")"/>
 <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <link href="@Url.Content("~/Content/Cabecera/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/Cabecera/WebResource.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/OperacionesGG.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JSsoftHotel.js")" type="text/javascript"></script>
</head>

<body>
    <div class="page">
        <div class="header">
            <div class="title">
                <h1>@Html.ActionLink("Sistema de Cobranza","Index","Home", null, new { @style ="color:White" })</h1>
            </div>
            <div class="loginDisplay">
				@Html.Partial("_LogOnPartial")
			</div>
			<div  class="clear hideSkiplink">
				<div class="menu" id="NavigationMenu" style="float: left; ">
					<ul class="level1 static" target="principal" tabindex="0" style="position: relative; width: auto; float: left; " role="menubar">
						<li class="has-popup static" aria-haspopup="NavigationMenu:submenu:2" role="menuitem" style="position: relative; float: left; ">
							@Html.ActionLink("Administración", "About", "Home")
							<ul class="level2 dynamic" id="NavigationMenu:submenu:2" style="display: none; position: absolute; top: 100%; left: 0px; ">
								@if (Request.IsAuthenticated && User.IsInRole("Carteras"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Carteras", "Index", "Carteras")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Acreedores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Acredores", "Index", "Acreedores")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Gestores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Colaboradores", "Index", "Colaboradores")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Niveles de deudas y gestores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Niveles de deuda y gestores", "About", "ConfiguracionNiveles")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Configuración de actividades"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Configuración de actividades", "Index", "ConfiguracionPoliticaCobranza")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Tipos de actividades"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Tipos de actividades", "Index", "TiposActividad")</li>}
							</ul>
						</li>
						<li class="has-popup static" aria-haspopup="NavigationMenu:submenu:19" role="menuitem" style="position: relative; float: left; ">
                            @Html.ActionLink("Seguridad", "About", "Home")
							<ul class="level2 dynamic" id="NavigationMenu:submenu:19" style="display: none; position: absolute; top: 100%; left: 0px; ">
                                @if (Request.IsAuthenticated && User.IsInRole("Accesos"))
								{<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Accesos", "About", "Home")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Modificar contraseña"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Modificar contraseña", "About", "Home")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Roles"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Roles", "Index", "Roles")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Usuarios"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>}
							</ul>
						</li>				
						<li class="has-popup static" aria-haspopup="NavigationMenu:submenu:29" role="menuitem" style="position: relative; float: left; ">
                            @Html.ActionLink("Recaudación", "About", "Home")
							<ul class="level2 dynamic" id="NavigationMenu:submenu:29" style="display: none; position: absolute; top: 100%; left: 0px; ">
								@if (Request.IsAuthenticated && User.IsInRole("Asignar deudas"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Asignar deudas", "Index", "AsignacionDeudas")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Registrar avance"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Registrar avance", "Index", "RegistroAvance")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Consultar carteras"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Consultar carteras", "Index", "ConsultaCarteras")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Consultar carga de gestores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Consultar carga de gestores", "Index", "ConsultaGestores")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Asignar supervisores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Asignar supervisrores", "Index", "AsignacionSupervisores")</li>}
							</ul>
						</li>
						<li class="has-popup static" aria-haspopup="NavigationMenu:submenu:41" role="menuitem" style="position: relative; float: left; ">
                            @Html.ActionLink("Reportes", "About", "Home")
							<ul class="level2 dynamic" id="NavigationMenu:submenu:41" style="display: none; position: absolute; top: 100%; left: 0px; ">
                                @if (Request.IsAuthenticated && User.IsInRole("Actividades"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Actividades", "Index", "ReporteActividades")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Estado de las carteras"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Estado de las carteras", "Index", "ReporteEstadoCarteras")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Desempeño de los gestores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Desempeño de los gestores", "Index", "ReporteDesempenioGestores")</li>}
                                @if (Request.IsAuthenticated && User.IsInRole("Acreedores"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Acreedores", "Index", "ReporteAcreedores")</li>}
							</ul>
						</li>
						<li class="has-popup static" aria-haspopup="NavigationMenu:submenu:43" role="menuitem" style="position: relative; float: left; ">
							@Html.ActionLink("Acreedores", "About", "Home")
							<ul class="level2 dynamic" id="NavigationMenu:submenu:37" style="display: none; position: absolute; top: 100%; left: 0px; ">
                                @if (Request.IsAuthenticated && User.IsInRole("Cargar carteras"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Cargar carteras", "Index", "CargaCarteras")</li>}
								@if (Request.IsAuthenticated && User.IsInRole("Consultar avance de carteras"))
                                {<li role="menuitem" class="dynamic" style="position: relative; ">@Html.ActionLink("Consultar avance de carteras", "About", "Home")</li>}
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="main">  
            @RenderBody()
        </div>

        </div>

<script type="text/javascript">    new Sys.WebForms.Menu({ element: 'NavigationMenu', disappearAfter: 500, orientation: 'horizontal', tabIndex: 0, disabled: false });</script>

</body>
</html>
