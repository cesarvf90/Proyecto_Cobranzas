@model RecaudaSoft.Models.Parametro

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Tipo de Actividad</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Tipo de actividad de cobro</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.valor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valor)
            @Html.ValidationMessageFor(model => model.valor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.valorNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valorNum)
            @Html.ValidationMessageFor(model => model.valorNum)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idPadre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idPadre)
            @Html.ValidationMessageFor(model => model.idPadre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.codUnico)
        </div>
        <div class="editor-field" >
            @Html.EditorFor(model => model.codUnico)
            @Html.ValidationMessageFor(model => model.codUnico)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
