@{
    ViewBag.Title = "MostrarReporte";
}

<h2>Reporte de Actividades</h2>
<html>
  <head>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        google.load("visualization", "1", { packages: ["corechart"] });
        google.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per day'],
          ['Llamada telefónica / Éxito', 11],
          ['Llamada telefónica / Fracaso', 2],
          ['Envío correo / Éxito', 5],
          ['Envío correo / Fracaso', 1],
          ['Envío correspondencia / Éxito', 7],
          ['Envío correspondencia / Fracaso', 4],
          ['Visita / Éxito', 8],
          ['Visita / Fracaso', 3]
        ]);

            var options = {
                title: 'Estadísticas de Actividades'
            };

            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
  </head>
  <body>
    <div id="chart_div" style="width: 900px; height: 500px; padding-top: 20px"></div>
  </body>
</html>